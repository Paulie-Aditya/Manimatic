# Worker image just for rendering Manim
FROM python:3.11-slim

# Install system deps required for Manim
RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    libcairo2-dev \
    libpango1.0-dev \
    texlive-latex-base \
    texlive-fonts-recommended \
    texlive-latex-extra \
    ffmpeg \
    git \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /job

# Install Python dependencies (use a smaller requirements-worker.txt if possible)
COPY requirements.txt .
RUN pip install --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt manim

# Copy entrypoint script
COPY worker_entrypoint.py /job/worker_entrypoint.py

CMD ["python", "/job/worker_entrypoint.py"]
